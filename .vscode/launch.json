    {
      "name": "Debug `make run` (localhost:4666)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/kfs.bin",
      "miDebuggerServerAddress": "localhost:4666",
      "cwd": ".",
